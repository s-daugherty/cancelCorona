{
"manifest_version": 2,
    "name": "Rewind 2020",
    "description": "[your extension description here]",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}